    <Button
        android:id="@+id/bottoneAzione1"
        android:layout_width="@dimen/button_width2"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="@dimen/riga_padding"
        android:layout_marginTop="@dimen/riga_padding"
        android:background="@color/colorPrimary"
        android:fontFamily="sans-serif-condensed"
        android:onClick="bottoneAzione1Click"
        android:tag="@string/button_type_single"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bottoneIndietro"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.985" />

    <Button
        android:id="@+id/bottoneAzione2"
        android:layout_width="@dimen/button_width2"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="@dimen/riga_padding"
        android:layout_marginTop="@dimen/riga_padding"
        android:background="@color/colorPrimary"
        android:fontFamily="sans-serif-condensed"

        android:onClick="bottoneAzione2Click"
        android:tag="@string/button_type_single"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bottoneAzione1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.985" />

    <Button
        android:id="@+id/bottoneAzione3"
        android:layout_width="@dimen/button_width2"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="@dimen/riga_padding"
        android:layout_marginTop="@dimen/riga_padding"
        android:background="@color/colorPrimary"
        android:fontFamily="sans-serif-condensed"

        android:onClick="bottoneAzione3Click"
        android:tag="@string/button_type_single"
        android:text=""
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bottoneAzione2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.985" />


    <Button
        android:id="@+id/bottoneAvanti"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:layout_marginLeft="@dimen/riga_padding"
        android:layout_marginTop="@dimen/riga_padding"
        android:background="@color/colorOK"
        android:fontFamily="sans-serif-condensed"
        android:onClick="bottoneAvantiClick"
        android:tag="@string/button_type_multiple"
        android:text="Avanti"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/bottoneAzione3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.985" />

    <Button
        android:id="@+id/bottoneIndietro"
        android:layout_width="@dimen/button_width2"
        android:layout_height="@dimen/button_height"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="@dimen/riga_padding"
        android:layout_marginStart="32dp"
        android:layout_marginTop="@dimen/riga_padding"
        android:background="@color/colorERROR"
        android:onClick="bottoneIndietroClick"
        android:textSize="24dp"
        android:text="@string/Indietro"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.985"
        android:fontFamily="sans-serif-condensed" />


    <!-- INTESTAZIONE -->
    <ScrollView
        android:id="@+id/layoutHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="horizontal|vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        >

        <HorizontalScrollView
            android:id="@+id/horizontalViewHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal|vertical">

            <TableLayout
                android:id="@+id/tabellah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isScrollContainer="true">
            </TableLayout>

        </HorizontalScrollView>
    </ScrollView>

    <!-- CORPO -->
    <ScrollView
        android:id="@+id/layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/toolbar_space2"
        android:layout_marginBottom="@dimen/griglia_space_footer"
        android:orientation="horizontal"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="horizontal|vertical"
        android:background="@color/omarbackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <HorizontalScrollView
                android:id="@+id/horizontalView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/omarbackground"
                android:scrollbars="horizontal|vertical">

                <TableLayout
                    android:id="@+id/tabella"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/omarbackground"
                    android:isScrollContainer="true">

                </TableLayout>

            </HorizontalScrollView>
        </ScrollView>

    <!-- FOOTER -->
    <ScrollView
        android:id="@+id/layoutFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/griglia_space_footer"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/colorPrimaryDark">

        <HorizontalScrollView
            android:id="@+id/horizontalViewFooter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal|vertical">

            <TableLayout
                android:id="@+id/tabellaf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isScrollContainer="true">
            </TableLayout>

        </HorizontalScrollView>
    </ScrollView>

</android.support.constraint.ConstraintLayout>