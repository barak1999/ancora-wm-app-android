<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/riga_padding">

    <TextView
        android:id="@+id/titolo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/titolo_top"
        android:paddingEnd="@dimen/riga_padding"
        android:paddingLeft="@dimen/riga_padding"
        android:paddingRight="@dimen/riga_padding"
        android:paddingStart="@dimen/riga_padding"
        android:text="Demo"
        android:textColor="#000"
        android:textSize="@dimen/riga_titolo"
        android:fontFamily="sans-serif-condensed"
        />

    <TextView
        android:id="@+id/descrizione"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titolo"
        android:paddingLeft="@dimen/riga_padding"
        android:paddingRight="@dimen/riga_padding"
        android:text="Demo"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/riga_descrizione"
        android:fontFamily="sans-serif-condensed" />


</RelativeLayout>
