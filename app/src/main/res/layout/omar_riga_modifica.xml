<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/riga_height">


    <!--  android:background="@drawable/black" -->
    <TextView
        android:id="@+id/titolo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/titolo_top"

        android:paddingEnd="@dimen/riga_padding"
        android:paddingLeft="@dimen/riga_padding"
        android:paddingRight="@dimen/riga_padding"

        android:paddingBottom="@dimen/riga_padding"

        android:gravity="center_vertical"

        android:text="Demo"
        android:textColor="#000000"
        android:fontFamily="sans-serif-condensed"
        android:textSize="@dimen/riga_titolo_singolo"

        android:onClick="setKeyboard"

        />


    <!--android:backgroundTint="@android:color/transparent"-->

    <!--android:inputType="textCapCharacters"-->
<!-- android:backgroundTint="@color/omardisableGriglia" -->
    <EditText
        android:id="@+id/descrizione"
        android:layout_width="@dimen/edit_width"
        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/riga_start_descrizione"

        android:inputType="text"


        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/titolo_top"

        android:paddingEnd="@dimen/riga_padding"
        android:paddingLeft="@dimen/riga_padding"
        android:paddingRight="@dimen/riga_padding"

        android:paddingBottom="@dimen/riga_padding"


        android:gravity="center_vertical"

        android:text="Demo"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="sans-serif-condensed"
        android:textSize="@dimen/riga_descrizione_grande"
        android:textStyle="bold"

        android:background="@drawable/black"
        />


    <!-- android:layout_alignParentEnd="true" -->
    <Button
        android:id="@+id/bottoneCopia"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:minHeight="40dp"
        android:minWidth="40dp"


        android:gravity="center_vertical|center_horizontal"

        android:layout_marginTop="@dimen/riga_padding"
        android:layout_marginStart="@dimen/bottone_copia"
        android:text="C"

        android:visibility="gone"

        android:background="@color/colorPrimary"
        android:onClick="bottoneCopia"/>

    <Button
        android:id="@+id/bottonePossibilitÃ "

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"

        android:minHeight="40dp"
        android:minWidth="40dp"


        android:gravity="center_vertical|center_horizontal"

        android:layout_marginTop="@dimen/riga_padding"
        android:layout_marginStart="@dimen/bottone_copia"
        android:text="P"

        android:background="@color/colorPrimary2"
        android:onClick="bottonePossibilita"/>

    <ToggleButton
        android:id="@+id/onoff"
        android:layout_marginStart="@dimen/toogle_start"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/riga_titolo_singolo"
        android:text="NO"/>

    <!-- -->

    <RadioGroup
        android:id="@+id/radio"
        android:paddingTop="@dimen/riga_padding"
        android:layout_marginStart="@dimen/radio_start"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/radio1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/radio_margin"
            android:checked="true"
            android:textSize="@dimen/riga_titolo_singolo"
            android:text=""
            android:fontFamily="sans-serif-condensed"
            android:paddingLeft="@dimen/radio_space"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/titolo"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/radio2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/radio_margin2"
            android:layout_alignBaseline="@+id/radio1"
            android:layout_alignBottom="@+id/radio1"
            android:layout_toEndOf="@+id/radio1"
            android:paddingLeft="@dimen/radio_space"
            android:textSize="@dimen/riga_titolo_singolo"
            android:text=""
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/radio3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/radio_margin2"
            android:paddingLeft="@dimen/radio_space"
            android:layout_alignBaseline="@+id/radio2"
            android:layout_alignBottom="@+id/radio2"
            android:layout_toEndOf="@+id/radio2"
            android:textSize="@dimen/riga_titolo_singolo"
            android:text=""
            android:fontFamily="sans-serif-condensed"
            android:textStyle="bold"/>
    </RadioGroup>

    <CheckBox
        android:id="@+id/checkBoxConferma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="86dp"
        android:visibility="invisible" />

</RelativeLayout>